{
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "rootDir": "./src",
    "sourceMap": true,
    "paths": {
      "#schema/*": ["./src/schema/*"],
      "#ingest/*": ["./src/ingest/*"],
      "#normalize/*": ["./src/normalize/*"],
      "#enrich/*": ["./src/enrich/*"],
      "#render/*": ["./src/render/*"]
    }
  },
  "extends": "./tsconfig.base.json",
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts", "**/__tests__/**", "__tests__"]
}
