{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "paths": {
      "#enrich/*": ["./src/enrich/*"],
      "#ingest/*": ["./src/ingest/*"],
      "#normalize/*": ["./src/normalize/*"],
      "#render/*": ["./src/render/*"],
      "#schema/*": ["./src/schema/*"],
      "#utils/*": ["./src/utils/*"]
    },
    "rootDir": "./src",
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**",
    "__tests__"
  ],
  "extends": "./tsconfig.base.json",
  "include": ["src/**/*.ts"]
}
