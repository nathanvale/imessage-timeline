{
  "compilerOptions": {
    "noEmit": true,
    "paths": {
      "#enrich/*": ["./src/enrich/*"],
      "#ingest/*": ["./src/ingest/*"],
      "#normalize/*": ["./src/normalize/*"],
      "#render/*": ["./src/render/*"],
      "#schema/*": ["./src/schema/*"],
      "#utils/*": ["./src/utils/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**",
    "__tests__/**"
  ],
  "extends": "./tsconfig.base.json",
  "include": ["src/**/*.ts", "scripts/**/*.ts", "vitest.config.ts"]
}
